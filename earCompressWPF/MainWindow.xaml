<Window x:Class="earCompressWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:earCompressWPF"
        mc:Ignorable="d"
        Title="ear Compress" Height="450" Width="800" Loaded="Window_Loaded">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="14"></Setter>
        </Style>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="16"></Setter>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"></Setter>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="16"></Setter>
        </Style>
        <Style TargetType="{x:Type Border}">
            <Setter Property="CornerRadius" Value="3"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="45"/>
            <RowDefinition Height="45"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="75"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="100"></ColumnDefinition>
            <ColumnDefinition Width="100"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Label Grid.Column="0" VerticalAlignment="Center">Archivo</Label>
        <TextBox x:Name="txtNombreArchivo" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="0" Margin="2"></TextBox>
        <Button x:Name="cmdAbrir" Grid.Column="3" Grid.Row="0" Margin="2" Click="Button_Click">_Abrir</Button>

        <ListView x:Name ="lstListadeArchivos" Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="1" Margin="2" ItemsSource="{Binding}">
            <ListView.Resources>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
                <Style TargetType="{x:Type GridViewColumnHeader}">
                    <Setter Property="HorizontalContentAlignment" Value="Left" />
                </Style>
            </ListView.Resources>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Nombre" Width="Auto" 
                                    DisplayMemberBinding="{Binding Nombre}"/>
                    <GridViewColumn Header="Tamaño" Width="100" >
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock HorizontalAlignment="Right" Text="{Binding Tamaño}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
            
            <!--<ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{Binding Path=Nombre}"/>
                        <TextBlock Grid.Column="1" Text="{Binding Path=Tamaño}" HorizontalAlignment="Right" />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>-->
        </ListView>

        <Label Grid.Column="0" Grid.Row="2" VerticalAlignment="Center">Destino</Label>
        <TextBox x:Name="txtRutaDestino" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="2" Margin="2"></TextBox>
        <Button x:Name="cmdSelDestino" Grid.Column="3" Grid.Row="2" Margin="2" Click="cmdDestino_Click">_Destino</Button>
        
        <Button x:Name="cmdExtraerSeleccionados" Grid.Row="3" Grid.Column="2" Margin="2" Click="cmdExtraerSeleccionados_Click">
            <TextBlock TextAlignment="Center">Extraer<LineBreak/>Seleccionados</TextBlock>
        </Button>
        <Button x:Name="cmdExtraerTodos" Grid.Row="3" Grid.Column="3" Margin="2" Click="cmdExtraerTodos_Click">Extraer _Todos</Button>
        <StatusBar Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="4"></StatusBar>
    </Grid>
</Window>
